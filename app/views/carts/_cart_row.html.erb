<div class="cart_partial">
  <div class="card" style="width: 50rem;">
  <div class="row">
    <div class="col-xs-8">
      <h4<% item.name %></h4>
      <%= form_for order_item, remote: true do |form| %>
        <h4 class="text-left">Item: <span style="color: blue"><%= item.name %></span>
        <h4 class="text-right">Unit Price: <span style="color: blue">$<%= order_item.unit_price %></span>
        <div class="row">
          <div class="col-xs-4">
            <%= form.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <% form.hidden_field :item_id, value: item.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="button-group">
              <%= form.submit "Update Quantity", class: "btn btn-primary" %>
              <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you want to delete item '#{order_item.item.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: blue">$<%= order_item.total_price %></span></h4>
      <% end %>
    </div>
  </div>
</div>
</div>
